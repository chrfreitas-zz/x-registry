{
    'rules': {
        'no-undef': 1,
        'no-undefined': 1,
        'no-unused-vars': [2, 'varsIgnorePattern': 'Style'],
        'no-var': 2,
        'prefer-const': 1,
        'quotes': [2, 'single', 'avoid-escape'],
        'react/jsx-uses-vars': 1,
        'react/react-in-jsx-scope': 0
    },
    'parser': 'babel-eslint',
    'globals': {
        'document': true,
        'console': true,
        'fetch': true
    },
    'plugins': [ 'react' ],
    'extends': [ 'plugin:react/recommended' ]
}
